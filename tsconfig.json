{
  "compilerOptions": {
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "target": "es6",
    "strict": true,
    "outDir": "dist/",
    "rootDir": "src",
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "baseUrl": ".",
    "paths": {
      "ts-pattern": [
        "./src/index.ts"
      ],
      "ts-pattern/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "src"
  ],
}
